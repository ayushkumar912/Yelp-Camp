<% layout('/layouts/boilerplate') %> <% //using ejsMate %>
<div class="row">
  <h1 class="text-center">Edit CampGround</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title:</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%=campground.title %>"
          required
        />
        <div class="valid-feedback">description looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location: </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%=campground.location %>"
          required
        />
        <div class="valid-feedback">description looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">ImageUrl</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          value="<%=campground.image %>"
          required
        />
        <div class="valid-feedback">description looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">CampGroundPrice</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.000"
            value="<%=campground.price%>"
            aria-label="Price"
            aria-describedby="price-label"
            name="campground[price]"
            value="<%=campground.image %>"
          />
          <div class="valid-feedback">description looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          value="<%= campground.description %>"
          required
        ></textarea>
        <div class="valid-feedback">description looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update CampGround</button>
      </div>
    </form>
    <a href="/campgrounds/<%= campground._id%>">Back to CampGround</a>
  </div>
</div>
